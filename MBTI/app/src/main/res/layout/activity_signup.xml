<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">

    <!-- EditText 공간 -->
    <EditText
        android:layout_height="39dp"
        android:layout_width="270dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:hint="아이디를 입력해 주세요."
        app:fontFamily="@font/noto"
        android:textSize="16sp"
        android:inputType="textPersonName"
        android:ems="10"
        android:background="@drawable/signup_edittext_style"
        android:layout_weight="1"
        android:layout_marginTop="81dp"
        android:layout_marginLeft="105dp"
        android:layout_marginStart="105dp"
        android:id="@+id/userID_editText"/>

    <EditText
        android:layout_height="39dp"
        android:layout_width="270dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:hint="비밀번호를 입력해 주세요."
        app:fontFamily="@font/noto"
        android:textSize="16sp"
        android:inputType="textPassword"
        android:ems="10"
        android:background="@drawable/signup_edittext_style"
        android:layout_weight="1"
        android:layout_marginTop="192dp"
        android:layout_marginLeft="105dp"
        android:layout_marginStart="105dp"
        android:id="@+id/userPW_editText"/>

    <EditText
        android:layout_height="39dp"
        android:layout_width="270dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:hint="한번 더 입력해 주세요."
        app:fontFamily="@font/noto"
        android:textSize="16sp"
        android:inputType="textPassword"
        android:ems="10"
        android:background="@drawable/signup_edittext_style"
        android:layout_weight="1"
        android:layout_marginTop="241dp"
        android:layout_marginLeft="105dp"
        android:layout_marginStart="105dp"
        android:id="@+id/userPWCheck_editText"/>

    <EditText
        android:layout_height="39dp"
        android:layout_width="270dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:hint="이름을 입력해 주세요."
        app:fontFamily="@font/noto"
        android:textSize="16sp"
        android:inputType="textPersonName"
        android:ems="10"
        android:background="@drawable/signup_edittext_style"
        android:layout_weight="1"
        android:layout_marginTop="352dp"
        android:layout_marginLeft="105dp"
        android:layout_marginStart="105dp"
        android:id="@+id/userName_editText"/>

    <!-- TextView 공간 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:background="@drawable/signup_textview_style"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:paddingLeft="164dp"
        android:paddingTop="14dp"
        android:text="회원 가입"
        android:textColor="#4A4A4A"
        android:textColorHighlight="#000000"
        android:textSize="18sp"
        app:fontFamily="@font/noto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/id_textView"
        android:layout_width="45dp"
        android:layout_height="23dp"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="89dp"
        android:text="아이디"
        android:textColor="#000000"
        android:textColorHighlight="#000000"
        android:textSize="16sp"
        app:fontFamily="@font/noto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/id_Constraint_textView"
        android:layout_width="336dp"
        android:layout_height="32dp"
        android:layout_marginStart="35dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="130dp"
        android:text="※ 아이디는 알파벳 소문자, 숫자, 빼기( - ), 밑줄( _ ), 마침표( . )만 사용하여 3 ~ 15글자 사이로 만들어 주시기 바랍니다."
        android:textColor="#000000"
        android:textColorHighlight="#000000"
        android:textSize="11sp"
        app:fontFamily="@font/noto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pw_textView"
        android:layout_width="60dp"
        android:layout_height="23dp"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="200dp"
        android:text="비밀번호"
        android:textColor="#000000"
        android:textColorHighlight="#000000"
        android:textSize="16sp"
        app:fontFamily="@font/noto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/pw_Constraint_textView"
        android:layout_width="339dp"
        android:layout_height="32dp"
        android:layout_marginStart="35dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="290dp"
        android:text="※ 비밀번호는 알파벳 소문자, 숫자, 특수 기호( !, @, #, $, _ ) 를 사용하실 수 있으며, 8 ~ 16글자 사이로 만드시는 것을 권장드립니다."
        android:textColor="#000000"
        android:textColorHighlight="#000000"
        android:textSize="11sp"
        app:fontFamily="@font/noto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name_textView"
        android:layout_width="30dp"
        android:layout_height="23dp"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="360dp"
        android:text="이름"
        android:textColor="#000000"
        android:textColorHighlight="#000000"
        android:textSize="16sp"
        app:fontFamily="@font/noto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/school_textView"
        android:layout_width="30dp"
        android:layout_height="23dp"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="429dp"
        android:text="학교"
        android:textColor="#000000"
        android:textColorHighlight="#000000"
        android:textSize="16sp"
        app:fontFamily="@font/noto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 스피너 공간 -->
    <Spinner
        android:id="@+id/spinner"
        android:layout_width="270dp"
        android:layout_height="39dp"
        android:background="@drawable/signup_spinner_style"
        android:layout_marginTop="421dp"
        android:layout_marginLeft="105dp"
        android:layout_marginStart="105dp"
        android:hint="학교를 선택해 주세요."
        app:fontFamily="@font/noto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 버튼 공간 -->
    <Button
        android:id="@+id/signup_button"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginTop="605dp"
        android:background="@drawable/signup_button_style"
        android:text="회원 가입 하기"
        android:textColor="#4A4A4A"
        android:textColorHighlight="#4A4A4A"
        android:textSize="18sp"
        app:fontFamily="@font/noto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>